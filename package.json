{
  "name": "Timeline-Bot",
  "displayName": "Activity Timeline",
  "version": "1.2.2",
  "description": "A bot that show all events in a room",
  "url": "https://github.com/salesforce/refocus-bot-timeline/",
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "test-integration": "NODE_ENV=integrationSandbox node retrieveAndSetAPIToken.js && npm start && npm run cypress:run",
    "test-integration:dev": "node retrieveAndSetAPIToken.js && npm start && npm run cypress:open",
    "cypress:open": "$(npm bin)/cypress open",
    "cypress:run": "$(npm bin)/cypress run --browser chrome",
    "start-ui": "webpack-dev-server --open",
    "start": "npm run build-ui && node index.js",
    "build-ui": "webpack --config webpack.config.js",
    "lint": "eslint --ext=js --ext=jsx .",
    "postinstall": "npm run build-ui",
    "coverage": "istanbul cover node_modules/mocha/bin/_mocha tests/unit --recursive --require @babel/register **/*.jsx --require ignore-styles",
    "test-unit": "npm run lint && mocha tests/unit --recursive --require @babel/register **/*.jsx --require ignore-styles && npm run coverage",
    "test": "npm run test-unit && npm run test-integration",
    "test:dev": "npm run test-unit && npm run test-integration:dev"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm test"
    }
  },
  "dependencies": {
    "@salesforce/refocus-bdk": "^1.10.2",
    "chai": "^4.2.0",
    "cypress": "^3.2.0",
    "dotenv": "4.0.0",
    "dotenv-webpack": "^2.0.0",
    "express": "^4.16.4",
    "husky": "^0.14.3",
    "ignore-styles": "^5.0.1",
    "istanbul": "^0.4.5",
    "jsforce": "^1.9.3",
    "linkifyjs": "^2.1.8",
    "lodash": "^4.17.19",
    "mocha": "^6.1.3",
    "moment": "^2.24.0",
    "prop-types": "^15.7.2",
    "puppeteer": "^1.14.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-html-parser": "^2.0.2",
    "react-test-renderer": "^16.13.1",
    "read-env": "^1.3.0",
    "sinon": "^2.3.7",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0",
    "superagent": "^3.6.0",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "umd-compat-loader": "^2.1.2",
    "unescape": "1.0.1"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": "> 0.25%, not dead"
        }
      ],
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-transform-regenerator",
      "@babel/plugin-transform-runtime"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/plugin-transform-regenerator": "^7.8.7",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "@babel/register": "^7.9.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^8.2.1",
    "css-loader": "^2.1.1",
    "eslint": "^4.18.2",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-cypress": "^2.2.1",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.17.0",
    "html-webpack-plugin": "^4.5.0",
    "style-loader": "^0.18.2",
    "url-loader": "^1.1.2",
    "webpack": "^4.43.0",
    "webpack-bundle-analyzer": "^3.7.0",
    "webpack-cli": "^3.3.11",
    "zip-webpack-plugin": "^3.0.0"
  },
  "metadata": {
    "actions": [
      {
        "name": "postAttachmentTimeline",
        "parameters": [
          {
            "name": "timelineBotAttachment",
            "type": "STRING"
          },
          {
            "name": "fileName",
            "type": "STRING"
          },
          {
            "name": "fileType",
            "type": "STRING"
          },
          {
            "name": "userName",
            "type": "STRING"
          },
          {
            "name": "selectedChatter",
            "type": "STRING"
          }
        ]
      }
    ],
    "data": [],
    "settings": []
  }
}
