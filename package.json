{
  "name": "Timeline-Bot",
  "displayName": "Activity Timeline",
  "version": "1.1.19",
  "description": "A bot that show all events in a room",
  "url": "https://github.com/salesforce/refocus-bot-timeline/",
  "scripts": {
    "test-integration": "NODE_ENV=integrationSandbox node retrieveAndSetAPIToken.js && npm start && npm run cypress:run",
    "test-integration:dev": "node retrieveAndSetAPIToken.js && npm start && npm run cypress:open",
    "cypress:open": "$(npm bin)/cypress open",
    "cypress:run": "$(npm bin)/cypress run --browser chrome",
    "start-ui": "webpack-dev-server --open",
    "start": "npm run build-ui && node index.js",
    "build-ui": "webpack --config webpack.config.js",
    "lint": "eslint --ext=js --ext=jsx .",
    "postinstall": "npm run build-ui",
    "coverage": "istanbul cover node_modules/mocha/bin/_mocha tests/*",
    "test-unit": "npm run lint && mocha tests/unit --recursive --require babel-core/register **/*.jsx --require ignore-styles && npm run coverage",
    "test": "npm run test-unit && npm run test-integration"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm test"
    }
  },
  "dependencies": {
    "@salesforce/refocus-bdk": "^1.6.19",
    "chai": "^4.2.0",
    "dotenv": "4.0.0",
    "dotenv-webpack": "1.5.4",
    "express": "^4.16.4",
    "linkifyjs": "^2.1.8",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-html-parser": "^1.0.3",
    "sinon": "^2.3.7",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0",
    "superagent": "^3.6.0",
    "unescape": "1.0.1"
  },
  "babel": {
    "presets": [
      "env",
      "react",
      "es2015",
      "stage-0"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.5.2",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.22.0",
    "css-loader": "^2.1.1",
    "cypress": "^3.2.0",
    "eslint": "^4.19.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-cypress": "^2.2.1",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "html-webpack-plugin": "^2.28.0",
    "husky": "^0.14.3",
    "ignore-styles": "^5.0.1",
    "istanbul": "^0.4.5",
    "mocha": "^6.1.3",
    "puppeteer": "^1.14.0",
    "react-test-renderer": "^15.6.2",
    "style-loader": "^0.18.2",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "url-loader": "^1.1.2",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.11.5",
    "zip-webpack-plugin": "2.0.0"
  },
  "metadata": {
    "actions": [],
    "data": [],
    "settings": []
  }
}
