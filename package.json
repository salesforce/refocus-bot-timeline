{
  "name": "Timeline-Bot",
  "displayName": "Activity Timeline",
  "version": "1.1.14",
  "description": "A bot that show all events in a room",
  "url": "https://github.com/salesforce/refocus-bot-timeline/",
  "scripts": {
    "start-ui": "webpack-dev-server --open",
    "start": "npm run build-ui && node index.js",
    "build-ui": "webpack --config webpack.config.js",
    "lint": "eslint --ext=js --ext=jsx .",
    "postinstall": "npm run build-ui",
    "test": "mocha tests --recursive --compilers js:babel-core/register **/*.jsx --require ignore-styles"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm test"
    }
  },
  "dependencies": {
    "@salesforce/refocus-bdk": "^1.6.9",
    "chai": "^4.0.2",
    "dotenv": "4.0.0",
    "dotenv-webpack": "1.5.4",
    "express": "4.10.2",
    "linkifyjs": "^2.1.6",
    "lodash": "^4.17.5",
    "mocha": "^3.4.2",
    "moment": "^2.22.1",
    "prop-types": "^15.6.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-html-parser": "^1.0.3",
    "sinon": "^2.3.7",
    "socket.io": "1.2.0",
    "socket.io-client": "^2.1.0",
    "superagent": "^3.6.0",
    "unescape": "1.0.1"
  },
  "babel": {
    "presets": [
      "env",
      "react",
      "es2015",
      "stage-0"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.5.2",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.22.0",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "html-webpack-plugin": "^2.28.0",
    "husky": "^0.14.3",
    "ignore-styles": "^5.0.1",
    "react-test-renderer": "^15.6.2",
    "style-loader": "^0.18.2",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "url-loader": "^0.5.9",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.11.2",
    "zip-webpack-plugin": "2.0.0"
  },
  "metadata": {
    "actions": [],
    "data": [],
    "settings": []
  }
}
